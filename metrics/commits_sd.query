[
  { 
    "$match": { 
      "team": "$$team",
      "user.login": { "$ne": "anonymous" }
    }
  },
  {
    "$group": {
      "_id": "$user.login",
      "commitCount": { "$sum": 1 }
    }
  },
  {
    "$group": {
      "_id": null,
      "stdevCommits": { "$stdDevPop": "$commitCount" },
      "avgCommits": { "$avg": "$commitCount" }
    }
  },
  {
    "$project": {
      "_id": 0,
      "stdevCommits": 1,
      "avgCommits": 1
    }
  }
]
